{% extends 'base.twig' %}

{% block title %}Ma Wishlist{% endblock %}

{% block content %}
<div class="wishlist-container">
    <div class="contour_wishlist">
        <h1 id="titre_wishlist">Ma Wishlist</h1>
    </div>
    
    {% if wishlistOffers is empty %}
        <p>Votre wishlist est vide.</p>
        <a href="index.php?page=Offer">Voir les offres disponibles</a>
    {% else %}
        <div class="offres-container-wishlist">
            {% for offer in wishlistOffers %}
                <div class="offre-wishlist">
                    <a href="index.php?page=ToggleWishlist&id={{ offer.Id_Offer }}" class="bouton-favori active">★</a>
                    <h3>{{ offer.Title_Offer }}</h3>
                    <p><span class="company-name">{{ offer.Company_Name }}</span> - {{ offer.Address_Offer }}</p>
                    <span class="tag">{{ offer.Contract_Offer }}</span>
                    <span class="tag">{{ offer.ActivitySector_Offer }}</span>
                    <span class="salaire">{{ offer.Salary_Offer }}€</span>
                    <p>{{ offer.Description_Offer|slice(0, 50) }}{% if offer.Description_Offer|length >= 50 %}...{% endif %}</p>
                    <br>
                    <a href="?page=DetailOffer&id={{ offer.Id_Offer }}" class="voir-plus">Voir plus</a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
