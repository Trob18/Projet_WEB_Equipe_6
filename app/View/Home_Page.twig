{% extends 'base.twig' %}

{% block title %}Home_Page
{% endblock %}

{% block content %}


	<main>
		<section class="accueil-container">
			<div class="tableau_de_bord_profil">
				<div class="tableau_de_bord">
					<h3>
						Mon tableau de bord
						<img src="assets/img/voilier.png" class="icone-voilier"/>
					</h3>
					<p class="Accueil-infos-titre">Candidatures</p>
					<span class="Accueil-infos">{{Candidatures}}</span>
					<p class="Accueil-infos-titre">Wishlist</p>
					<span class="Accueil-infos">{{Wishlist}}</span>
          <p class="Accueil-infos-titre">Description</p>
					<span class="Accueil-infos">{{Description}}</span>
				</div>
				<div class="profil">
					<h3>Mon Profil</h3>
					<p class="Accueil-infos-titre">
						Nom
						<span class="Accueil-infos">{{lastname}}</span>
					</p>
					<p class="Accueil-infos-titre">
						Prénom
						<span class="Accueil-infos">{{firstname}}</span>
					</p>
					<p class="Accueil-infos-titre">
						Compte
						<span class="Accueil-infos">{{Permission}}</span>
					</p>
				</div>
			</div>

			<div class="entreprises_intéressées">
				<h3>Les entreprises les plus populaires</h3>
				<p class="Accueil-infos-titre">Au cours des 30 derniers jours :</p>
				<div id="entreprises" class="entreprises-container"></div>
			</div>
		</section>
	</main>

{% endblock %}
