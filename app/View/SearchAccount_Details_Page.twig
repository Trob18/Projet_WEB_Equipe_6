{% extends 'base.twig' %}

{% block title %}Search_Details{% endblock %}

{% block content %}

<main class="Account">
        <section class="Account_Recherche_Utilisateur">
                <h1>{{ account.FirstName_Account }} {{account.LastName_Account}}</h1>
                <img id="img_search" src="assets/img/{{ account.Image_Account }}">
                <p>Date de Naissance: {{ account.DateNaissance_Account }}</p>
                <p>Email: {{ account.Email_Account }}</p>
                <p>Numéro de téléphone: {{ account.PhoneNumber_Account }}</p>
                <p>Adresse: {{ account.Address_Account }}</p>
                <p>Etude: {{ account.Studies_Account }}</p>
                <p>Description: {{ account.Description_Account }}</p>
                <form method="POST">
                        <button class="btn-primary" name="modify_account" >Modification</button>
                </form>
                
                <form method="POST">
                        <button type="submit" name="delete_account" class="btn-danger">Supprimer</button>
                </form>
        </section>
</main>

{% endblock %}